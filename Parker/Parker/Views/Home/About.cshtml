@{
    ViewData["Title"] = "Upload Image";
}
<form method="post" enctype="multipart/form-data" asp-route="api/RecieveFiles/Colibita">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload file:</p>
            <input type="file" name="file" required/>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>
